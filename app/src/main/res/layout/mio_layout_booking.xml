<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="12dp"
    app:cardElevation="4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_project_icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/fieldImage"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_launcher_background" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/bookingFieldTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_view_project_icon_container"
            android:layout_marginTop="88dp"
            android:fontFamily="sans-serif-black"
            android:text="Titolo"
            android:textAlignment="center"
            android:textColor="#222"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fieldHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookingFieldTitle"
            android:layout_marginTop="6dp"
            android:textAlignment="center"
            android:text="Pren. "
            android:textSize="18sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>