<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="12dp"
    app:cardElevation="4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            android:id="@+id/card_view_project_icon_container">

            <ImageView
                android:id="@+id/fieldImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_launcher_background" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:fontFamily="sans-serif-black"
            android:textColor="#222"
            android:textSize="18sp"
            android:text="Titolo"
            android:id="@+id/fieldTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_view_project_icon_container"
            android:layout_toEndOf="@id/card_view_project_icon_container"/>

        <TextView
            android:textSize="18sp"
            android:text="Orari"
            android:id="@+id/fieldHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fieldTitle"
            android:layout_toEndOf="@id/card_view_project_icon_container"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>