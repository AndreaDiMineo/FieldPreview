<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/detailsBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/white"
            android:text="Indietro"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023"
            app:strokeColor="@color/green"
            app:strokeWidth="2dp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="69dp"
            android:layout_height="59dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/detailsImage"
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:layout_marginTop="84dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            tools:src="@drawable/ic_launcher_background" />

        <ProgressBar
            android:id="@+id/detailsProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/detailsImage"
            app:layout_constraintEnd_toEndOf="@+id/detailsImage"
            app:layout_constraintStart_toStartOf="@+id/detailsImage"
            app:layout_constraintTop_toTopOf="@+id/detailsImage" />

        <TextView
            android:id="@+id/detailsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Titolo"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailsImage" />

        <TextView
            android:id="@+id/detailsAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Indirizzo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailsTitle" />

        <TextView
            android:id="@+id/detailsHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Orari"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailsAddress" />

        <TextView
            android:id="@+id/calendar"
            android:layout_width="184dp"
            android:layout_height="36dp"
            android:background="@drawable/border_color"
            android:text="Prova"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailsHours"
            app:layout_constraintVertical_bias="0.097" />

        <ImageView
            android:id="@+id/calendarImage"
            android:layout_width="32dp"
            android:layout_height="27dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="@+id/calendar"
            app:layout_constraintHorizontal_bias="0.937"
            app:layout_constraintStart_toStartOf="@+id/calendar"
            app:layout_constraintTop_toTopOf="@+id/calendar"
            app:layout_constraintVertical_bias="1.0"
            tools:src="@drawable/calendar" />

        <Button
            android:id="@+id/booking"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:clickable="false"
            android:text="Prenota"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendar"
            app:layout_constraintVertical_bias="0.182" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>